{
  "name": "ng-webpack-core",
  "version": "1.0.0",
  "description": "ASP.NET Core 2.0 + Angular 4.X + Webpack",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "wp": "webpack",
    "wpw": "webpack --watch",
    "wpp": "webpack --config config/webpack.prod.js --progress --profile --bail",
    "clean:aot": "rimraf tmp/aot/*",
    "clean:dist": "rimraf wwwroot/dist/*",
    "ngc": "ngc -p ./tsconfig-webpack-aot.json",
    "build-prod": "npm run ngc && npm run wpp",
    "start:prod": "dotnet run --launch-profile ngWebpackCoreProd",
    "aot": "tsc && ngc -p tsconfig-rollup-aot.json",
    "build-rollup": "rimraf wwwroot/dist/build/* && rollup -c rollup.config.js",
    "aot-rollup": "npm run aot && npm run build-rollup"
  },
  "author": "Joe Bell",
  "license": "ISC",
  "dependencies": {
    "@angular/common": "^4.4.6",
    "@angular/compiler": "^4.4.6",
    "@angular/compiler-cli": "^4.4.6",
    "@angular/core": "^4.4.6",
    "@angular/forms": "^4.4.6",
    "@angular/http": "^4.4.6",
    "@angular/platform-browser": "^4.4.6",
    "@angular/platform-browser-dynamic": "^4.4.6",
    "core-js": "^2.5.1",
    "rxjs": "^5.5.2",
    "zone.js": "^0.8.18"
  },
  "devDependencies": {
    "@ngtools/webpack": "^1.7.4",
    "@types/node": "^8.0.47",
    "angular2-template-loader": "^0.6.2",
    "awesome-typescript-loader": "^3.2.3",
    "html-loader": "^0.5.1",
    "rimraf": "^2.6.2",
    "rollup": "^0.50.0",
    "rollup-plugin-commonjs": "^8.2.5",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-uglify": "^2.0.1",
    "source-map-loader": "^0.2.3",
    "typescript": "^2.5.3",
    "webpack": "^3.8.1",
    "webpack-merge": "^4.1.0"
  }
}
