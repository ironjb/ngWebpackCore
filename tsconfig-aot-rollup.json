{
	"compilerOptions": {
		"target": "es5",
		"module": "es2015",
		"moduleResolution": "node",
		"sourceMap": false,
		// "removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"lib": ["es2015", "dom"],
		"noImplicitAny": true,
		"suppressImplicitAnyIndexErrors": true,
		"typeRoots": [
			"./node_modules/@types"
		]
	}

	, "exclude": [
		"node_modules"
		, "bin"
		, "Controllers"
		, "Models"
		, "obj"
		, "Properties"
		, "Views"
		, "wwwroot"
	]

	, "files": [
		"app/app.module.ts",
		"app/main-aot-rollup.ts"
	]

	, "angularCompilerOptions": {
		"genDir": "./tmp/aot",
		"skipMetadataEmit": true
	}
}